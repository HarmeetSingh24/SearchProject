<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="singh.harmeet.com.searchproject1.activity.DetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/tool_bar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/menu_tool"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            />
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/tool_bar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/event_card"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dp">
            <ImageView
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:id="@+id/image_venue_detail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_detail"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen_sp"
                android:layout_toRightOf="@id/image_venue_detail" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_detail"
                android:singleLine="true"
                android:layout_below="@id/title_detail"
                android:layout_toRightOf="@id/image_venue_detail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_time_detail"
                android:singleLine="true"
                android:layout_below="@id/location_detail"
                android:layout_toRightOf="@id/image_venue_detail"
                android:textSize="@dimen/fifteen_sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>